.Tabs
	overflow hidden
	width 100%
	margin 0
	padding 0
	list-style none
	text-align center
	
	&-item
		float left
		margin 0 0
	
	&-itemLink
		cursos pointer
		position relative
		background $light_gray	
		padding .5em 1.9em
		float left
		text-decoration none
		color $gray		
		border-radius 7px 7px 0 0
		box-shadow 0 2px 2px rgba(0,0,0,.4)
		border 2px solid $light_gray
		border-bottom none
		font-size 1.12em
	
		&:hover
		&:focus
			background $white

		&:focus
			outline 0
			
	&-contentPane
		display none
	&--is-active
		display block
		
	&--is-selected
		color $black
		background $white