/*TARIFAS*/

.Tarifas
	text-align center
	&-title
		font-weight 700
		font-size 2.18em
		color $lima
		margin 0
	&-imageContainer
		margin 0
		display inline-block
	&-textContainer
		display inline-block
		max-width 394px
		text-align left
		margin 1em
			
	&-imageContainer
	&-textContainer
		vertical-align middle
		
	&-description
		margin 0
		color $gray
		font-weight 300
		font-size 1.25em
		margin-left 1em
		
	&-buttonContainer
		margin 1em
		background-image url(../images/sombra-btn-tarifa.png)
		background-repeat no-repeat
		background-position bottom center
		background-size contain
		padding 0 1.3em .6em
		display inline-block
		
	&-button
		text-decoration none
		color $white
		background-color $light_red
		padding .5em 1em
		font-weight 400
		font-size 1.25em
		text-transform uppercase