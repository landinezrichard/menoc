/*MEDIO-ARCHIVO*/

.Medio-archivo
	text-align center
	&Container
		border-bottom 1px dotted $light_gray
		overflow auto
	&Title
		color $naranja
		font-size 2.18em
		font-weight 700		
		margin 0
		margin-top 1em
		
	&TextContainer
		padding 0 .5em .5em		
		height 2.5em
		
	&SubTitle
		color $dark_gray
		font-weight 700
		font-size 1.12em
		text-transform uppercase
		margin 0
		padding-right .5em
		display inline-block
		float left
		
	&Feature
		display inline-block
		color $naranja
		float left
		padding-left .5em
		font-weight 400
		font-size 1.1em
		border-left 1px solid $light_gray
		
	&Nav
		color $dark_gray2
		display inline-block
		float right
		
	&Link
		font-weight 400
		font-size 1.12em
		text-decoration none
		text-transform uppercase
		color $dark_gray2
		
	&List
		text-align center
		
	/*items*/
		
	&Item
		display block
		border 1px solid $light_gray
		margin .5em
		padding .5em
		text-align center
		width 90%
	&Textleft
		text-align left
		display block
		vertical-align middle
	&Text
		font-weight 300
		font-size 1.18em
		color $gray
		margin 0
		overflow auto
		
	&Bold
		font-weight 400
		color $black
		width 154px
		float left
	&Light
		float left
	&Button
		vertical-align middle
		display block
		& .Tarifas-buttonContainer
			margin 1em 0
		

/*Tablet*/

@media (min-width: 768px)
	.Medio-archivo
		&SubTitle
			font-size 1.12em			
			padding-right 1em
			
		&Feature
			padding-left 1em
			font-size 1.2em			

		&List
			text-align left
			
		/*items*/
			
		&Item
			width 100%
			
		&Textleft			
			display inline-block
			vertical-align middle
			
		&Button
			vertical-align middle
			display inline-block
			& .Tarifas-buttonContainer
				margin 0