/*NEWS-FULL*/

.News-full
	text-align left
	border-bottom 1px dotted $light_gray
	&ImageContainer
		margin 0
		display inline-block
		border 1px solid $light_gray
		vertical-align middle
		padding .5em
		border-radius 5px
		border 1px solid $light_gray
		border-top 0
		box-shadow 0 4px 4px $light_gray
	&Right
		display inline-block
		max-width 360px
		text-align left
		margin 1em
		vertical-align middle
	&Date
		font-weight 300
		font-size 1em
		color $light_gray2
		
	&Title
		color $dark_gray
		font-weight 700
		font-size 1.87em
		
	&Date
	&Title
		margin 0
	
	&Description
		font-weight 300
		font-size 1.25em
		color $gray
		overflow auto
		margin 0 .5em
	&Autor
		font-weight 300
		font-size 1em
		color $light_gray3
		display inline-block
		float right
		margin 0
		margin-bottom 1em
		
	&Link
		color $light_gray3
		text-decoration underline
	&Subtitle
		text-align left
		color $naranja
		font-weight 700
		font-size 2.18em
		margin .5em .5em 0
		
		& + .orangeBorder
			margin-left 1em
			text-align left
			float left
	&List
		& > .Noticias-item
			display inline-block			
			
			& .Noticias-itemTitle
				margin-bottom .5em

			& .Noticias-imageContainer
				display block
				max-width inherit
				
			& .Noticias-description
				display none
			
				
/*Tablet*/

@media (min-width: 768px)
	.News-full
		&Subtitle
			margin 1em 0 0
			
			& + .orangeBorder
				margin-left 0
		&List
			width 100%
			& > .Noticias-item
				display inline-block
				width 30%
				margin 0 .5em 0 0
				// float left				
				& .Noticias-imageContainer
					display block
					max-width inherit
					
				& .Noticias-text
					margin 0
					
				