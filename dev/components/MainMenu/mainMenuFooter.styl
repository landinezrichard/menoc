/*Tablet*/

@media (min-width: 768px)
	.MainMenu
		margin 0
		&--footer			
			background-color $black
			color $white
			margin 0
			width 100%

		&-button
			display none
			
		&-list			
			height 200px			
			overflow visible
			margin 0
			display flex
			flex-flow column wrap
			justify-content space-around
			line-height 4em
			text-align left
			font-weight 300
			font-size 1.1em
			background-color inherit
			position inherit
			
		&-item
			line-height normal
			display inline-block
			float none
			height initial
			width 50%
			padding 0
			&:hover
			&:active
				background-color inherit
				.MainMenu-link
					color $naranja
			
		&-link
			padding 0			
			color $white	