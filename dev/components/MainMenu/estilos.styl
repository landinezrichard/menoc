/*COMPONENTE MENU PRINCIPAL*/

.MainMenu
	background-color $light_gray

	&-button
		border 0
		border-radius 5px
		background-color $white
		order 2
		padding 0
		margin 0 1rem
		color $black

	&-list
		margin 0
		padding 0
		list-style none
		height 0
		overflow hidden
		transition height .3s ease
		max-width 1100px
		display flex
		flex-flow row wrap

		&--show
			height auto
	&-item
		display block
		width 100%
		transition all .3s ease
		&:hover
			background-color $naranja
			.MainMenu-link
				color $white

	&-link
		text-decoration none
		color $black
		width 100%
		padding 1.5em
		display inline-block		
		font-size 1em		

/*Tablet*/

@media (min-width: 768px)
	.MainMenu		
		margin-right .5rem
		width 90%

		&-button
			display none
			
		&-list
			height 4em
			line-height 4em
			display flex
			flex-flow row nowrap
			justify-content space-around
			text-align center
			
		&-item
			display inline-block			
			&:hover			
				background-color $naranja
				.MainMenu-link
					color $white			
		&-link
			padding 0 .4em
			width auto
			
			