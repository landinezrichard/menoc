/*MEDIO-ITEM*/

.Medio
	
	&-item
		border-bottom 1px dotted $light_gray
	
	&-graph
	&-text
	&-features
		display inline-block
		vertical-align top

	&-graph
		display inline-block
		width 15%
		margin-top 2em
		box-sizing border-box
	&-imageContainer
		margin 0
		max-width 65px
		display inline-block
		
	&-image
		width 100%
		
	&-stars
		font-size 1em
		color $light_yellow
		margin-top 2em
		
	&-text
		display inline-block
		width 60%
		color $dark_gray
		text-align left
		margin 1em
		padding 0 1em
		box-sizing border-box
		border-left 1px solid $gray
		border-right 1px solid $gray
	&-title		
		font-weight 700
		font-size 1.12em
		text-transform uppercase
	&-description
		font-weight 300
		font-size 1em
		margin 0
	&-group
		text-transform uppercase
		
	&-features
		width 20%
		box-sizing border-box
		font-weight 400
		font-size 1em
		margin 1em 0		
		
	&-featureItem
		margin 1em
		&:nth-child(1)
			color $lima
		&:nth-child(2)
			color $naranja
		&:nth-child(3)
			color $light_red
	&-featureIcon		
		font-size 2em
	&-featureText
		margin 0
		margin-left .5em
	&-featureIcon
	&-featureText
		display inline-block
		vertical-align middle	