/*PAISES*/

.Paises
	background-image url(../images/intro/bg-intro.jpg)
	background-repeat no-repeat
	background-position top center
	text-align center
	width 100%
	// height 100%
	&-container
		width auto
		height auto
		margin 0 auto		
	&-title
		margin 0
		font-weight 700
		font-size 1.37em
		color $black
		padding-top 1em
	&-elija
		font-weight 300
		font-size 1.37em
		color $black
		margin 1em 0 0
	&-item
		display inline-block
		margin 1em
		max-width 100px
		vertical-align top
		&:hover
			animation animatemsj 1s infinite
	&-link
		color $white
		font-weight 400
		font-size 1.05em
	&-imageContainer
		margin 0
	&-text
		margin 0
		
		
@keyframes animatemsj {
	16.65% {
		transform: translateX(2px);
	}
	33.3% {
		transform: translateX(-2px);
	}
	49.95% {
		transform: translateX(2px);
	}
	66.6% {
		transform: translateX(-2px);
	}
	83.25% {
		transform: translateX(1px);
	}
	100% {
		transform: translateX(0);
	}
}

/*Tablet*/

@media (min-width: 590px)
	.Paises
		height 100%		
		&-container
			width 600px
			height 680px