/*MEDIO-ENLACES*/

.Medio-enlaces
	text-align center
	&Container
		border-bottom 1px dotted $light_gray
		overflow auto
	&Title
		color $naranja
		font-size 2.18em
		font-weight 700
		margin 0
		margin-top 1em
		
	&TextContainer
		padding 0 .5em .5em
		height 2.5em
		
	&SubTitle
		color $dark_gray
		font-weight 700
		font-size 1.12em
		text-transform uppercase
		margin 0
		padding-right .5em
		display inline-block
		float left
		
	&Feature
		display inline-block
		color $light_red
		float left
		padding-left .5em
		font-weight 400
		font-size 1.1em
		border-left 1px solid $light_gray
		
	&Nav
		color $dark_gray2
		display inline-block
		float right
		
	&Link
		font-weight 400
		font-size 1.12em
		text-decoration none
		text-transform uppercase
		color $dark_gray2
		
	&List
		text-align center
		
	/*items*/
		
	&Item
		display inline-block
		border 1px solid $light_gray
		margin .5em
		padding .5em
		text-align center
		width 228px
	&Text
		font-weight 300
		font-size 1.18em
		color $gray
		margin 0
		
	&Bold
		font-weight 400
		color $black

/*Tablet*/

@media (min-width: 768px)
	.Medio-enlaces
		&SubTitle
			font-size 1.12em
			padding-right 1em
			
		&Feature
			padding-left 1em
			font-size 1.2em

		&List
			text-align left