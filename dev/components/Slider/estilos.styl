/*SLIDER*/

.Slider
	display inline-block
	
	&-container
		position relative	
	
	&-imageContainer
		margin 0
		
	&-text
		position relative
		display block		
		z-index 6
		width 100%
		margin 1em
	&-title
		margin 0
		font-weight 700
		font-size 2.2em
	&-description
		margin 0
		font-weight 300
		font-size 1.25em
	&-buttonContainer
		text-align center
		margin 1em 0
	&-button
		background-color $naranja
		padding .7em 3em
		text-decoration none
		color $white
		display inline-block
		cursor pointer
		font-size 1.25em

/*Tablet*/

@media (min-width: 768px)
	.Slider		
		padding-bottom 8.2em
		
		&-text
			position absolute
			top 0
			right 0
			z-index 6
			width 35%
			margin 1em 0 1em 1em