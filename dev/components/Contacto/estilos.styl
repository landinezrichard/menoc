/*CONTACTO*/

.Contacto
	text-align center
	&-title
		color $lima
		margin 0
		margin-top 1em
		font-weight 700
		font-size 2.18em		
	&-description
		margin 0
		font-weight 300
		font-size 1.25em
		color $gray
	&-formContainer
		background-image url("../images/fondo-contacto.png")
		background-repeat no-repeat
	&-form
		display inline-block
		
	&-label
		color $dark_gray
		font-weight 400
		font-size 1.12em
	&-input
		width 266px