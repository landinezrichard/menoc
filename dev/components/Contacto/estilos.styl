/*CONTACTO*/

.Contacto
	text-align center
	&-title
		color $lima
		margin 0
		margin-top 1em
		font-weight 700
		font-size 2.18em		
	&-description
		margin 0
		font-weight 300
		font-size 1.25em
		color $gray
	&-formContainer
		background-image url("../images/fondo-contacto.png")
		background-repeat no-repeat
		background-position top center
		margin 1em 0
	&-form
		display inline-block
		min-height 345px
		margin 3.56em 6.25em 4em
		
	&-fieldContainer
		width 266px
		margin .5em
		text-align left
		display inline-block
		// padding 0.31em
		
	&-label
		color $dark_gray
		font-weight 400
		font-size 1.12em
		width 100%
		
	&-input
		width 100%
		height 32px
		border none
	&-textArea
		width 555px
	&-textAreaH
		height 105px
	&-bottom
		margin .5em
	&-buttonContainer
		display inline-block
		background-image url(../images/sombra-btn-tarifa.png)
		background-repeat no-repeat
		background-position bottom center
		background-size contain
		float right
		margin-right 1em
		
	&-button
		background-color $naranja
		color $white
		border none
		text-transform uppercase
		font-weight 400
		font-size 1.25em
		padding .2em 2.6em
		margin 0 .8em