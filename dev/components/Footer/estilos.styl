/*FOOTER*/

.Footer
	background-color $black
	color $white
	max-height 350px
	padding 2em	
	
	&-container
		display flex
		justify-content space-around
		align-items center
		flex-flow row nowrap
		max-width 1100px
		margin 0 auto
		
	&-copy
		text-align center
		margin-top 1em
		
	&-copyText
		margin 0
		font-weight 300
		font-size .8em
		
	&-logo
		width 25%
		
	&-categoria		
		height 234px
		// estilos menu principal en el Footer
		@import "../MainMenu/mainMenuFooter.styl"
		
	&-about
		// estilos menu about en el Footer
		@import "../AboutMenu/aboutMenuFooter.styl"

	// &-categoria
	// &-about
	// &-pais
	// 	padding 0 2em
	// 	width 25%
		
	&-categoriaTitle
	&-aboutTitle
	&-paisTitle
		font-weight 700
		font-size 1.1em
		margin 0
				
		
.u-leftBorder
	border-left 1px solid $light_gray
	padding 0 2em
	width 25%
	height 234px