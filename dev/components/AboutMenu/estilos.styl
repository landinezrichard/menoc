/*COMPONENTE ABOUTMENU*/

.AboutMenu
	font-weight 300
	background-color $light_black

	&-button
		border 0
		border-radius 5px
		background-color $white
		order 1
		padding 0
		margin-left 1rem
		color $turquesa //ojo
		
	&-container
		margin 0 auto
		max-width 1100px

	&-list
		margin 0 1.4em 0 0
		padding 0
		list-style none
		height 0
		overflow hidden
		transition height .3s ease		

		&--show
			height auto
	&-item
		transition all .3s ease
		&:hover
			background-color $naranja
			.AboutMenu-link
				color $white

	&-link
		text-decoration none
		color $white
		width 100%
		padding 1.5em
		display block		
		font-size 1em
		
		&:active
			background-color $naranja


/*Tablet*/

@media (min-width: 768px)
	.AboutMenu		

		&-button
			display none
			
		&-list
			height 5em
			line-height 5em
			display flex
			flex-flow row nowrap
			justify-content flex-end
			text-align center
			
		&-item
			display inline-block
			&:hover
				background-color $naranja
				.AboutMenu-link
					color $black					
			
		&-link
			padding 0 .4em
			width auto			
			
			&:active
				border-bottom 4px solid $lima